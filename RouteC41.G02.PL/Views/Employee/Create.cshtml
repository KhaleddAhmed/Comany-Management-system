@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<br />
<br />

<form asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name" ></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Gneder"></label>
        <input asp-for="Gneder" class="form-control" />
        <span asp-validation-for="Gneder" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input asp-for="IsActive" class="form-check-input" />
        <label class="col-form-label" asp-for="IsActive"></label>
        
    </div>

    <div class="form-group">
            <label class="col-form-label" asp-for="CreationDate"></label>
        <input asp-for="CreationDate" class="form-control" />

          
     </div>

     <input type="submit" value="Create" class="btn btn-primary"/>
     <a asp-controller="Employee" asp-action="Index" class=" btn btn-light">Back To List</a>
 
</form>

@section ValidationScriptSection{
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
