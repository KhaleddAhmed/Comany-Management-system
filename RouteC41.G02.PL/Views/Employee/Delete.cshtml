@model Employee
@{
    ViewData["Title"] = "Delete Employee";
}


<h1> Ar You Sure You want to delete this Employee</h1>

<br />
<br />

<form asp-action="Delete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />

    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input asp-for="Address" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input asp-for="Age" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Gneder"></label>
        <input asp-for="Gneder" class="form-control" readonly />

    </div>

    <div class="form-group">
        <input asp-for="IsActive" class="form-check-input" readonly />
        <label class="col-form-label" asp-for="IsActive"></label>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CreationDate"></label>
        <input asp-for="CreationDate" class="form-control" readonly />


    </div>

    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>


</form>










